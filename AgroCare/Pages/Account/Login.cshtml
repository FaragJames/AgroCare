@page
@model LoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/login/login.css">
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/js/index/script.js"></script>
    
    <title>Log In</title>
</head>

<body>
    <div class="login">
        <div class="contain">
            <div class="profile">
                <img class="imge" src="~/images/login/شخص.png" alt="" style="width: 250px; height: 250px;">
                <h1>login</h1>
            </div>
            <form method="post" class="input">
                <div asp-validation-summary="All"></div>

                <div class="box_input">
                    <span class="material-symbols-outlined">person</span>
                    <input asp-for="Input.Email" class="input1" placeholder="your email">
                </div>
                <div class="box_input">
                    <span class="material-symbols-outlined">lock</span>
                    <input asp-for="Input.Password" class="input1" placeholder="your password">
                </div>

                <button type="submit">Log in</button>
            </form>
        </div>
    </div>
</body>

</html>